@model Product

@{
    Layout = "_Layout";
}

<form action="/Product/Delete" method="post" class="website-content default-page">
    <h2 class="default-page-title">@ViewBag.Title</h2>
    <div class="product-plate">
        <div class="product-plate-content">
            <div class="product-model">
                <div class="product-model-image">
                    @if (Model.Image != null)
                    {
                        @Html.Raw("<img src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.Image.ImageData) + "\" style='width:500px; height:500px;' />")
                    }
                    else
                    {
                        <img src="" class="product-image">
                        <p>НЕТ ИЗОБРАЖЕНИЯ</p>
                    }
                </div>
                <div class="product-model-info">
                    <input name="Id" value="@Model.Id" type="hidden" class="default-field-input" />
                    <input name="ImageId" value="@Model.ImageId" type="hidden" class="default-field-input" />
                    <input name="CategoryId" value="@Model.CategoryId" type="hidden" class="default-field-input" />
                    <input name="Name" value="@Model.Name" type="hidden" class="default-field-input" />
                    <input name="Price" value="@Model.Price" type="hidden" class="default-field-input" />
                    <input name="Number" value="@Model.Number" type="hidden" class="default-field-input" />
                    <h2 class="product-title">Наименование</h2>
                    <p class="product-price">@Model.Name</p>
                    <h2 class="product-title">Цена</h2>
                    <p class="product-price">@Model.Price</p>
                    <h2 class="product-title">Количество</h2>
                    <p class="product-price">@Model.Number</p>
                    <div class="button-plate">
                        <form action="/Product/Delete" method="post">
                            <button class="add-to-cart-button">Удалить</button>
                        </form>
                        <form action="/Home/Index">
                            <button class="add-to-cart-button">Назад</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
