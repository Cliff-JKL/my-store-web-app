<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Bootstrap CSS -->
    <!--<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">-->
    <link type="text/css" rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <title>MyStore</title>
</head>
<body>
    <div class="default">
        <header class="main-header">
            <div class="main-header-upper">
                <div class="main-header-strip">::before</div>
                <a href="/Home" class="website-logo">
                    <div class="website-logo-pic">
                        <img src="~/pics/track.png" />
                    </div>
                    <div class="website-logo-text">
                        <h1>MyStore</h1>
                    </div>
                </a>
            </div>
            <div class="main-header-lower">
                <ul class="main-header-lower-menu">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <li class="main-header-lower-menu-item">
                            <a href="/Home/Index/@category.Name" class="router-link">@category.Name</a>
                        </li>
                    }
                </ul>
                <div class="main-header-lower-sub">
                    <div class="main-header-lower-account">
                        <a href="/User/Info" class="main-header-lower-pic">
                            <img src="~/pics/user0.png" width="21" height="21" />
                        </a>
                        <a href="/User/Info" class="main-header-lower-account-name">
                            @ViewBag.CustomerName
                        </a>
                    </div>
                    <div class="main-header-lower-cart">
                        <a href="/ShoppingCart/Info" class="main-header-lower-pic">
                            <img src="~/pics/track.png" width="21" height="21" />
                        </a>
                        <a href="/ShoppingCart/Info" class="main-header-lower-cart-cost" id="header_cart_cost">
                            @ViewBag.ShoppingCartCost руб.
                        </a>
                    </div>
                </div>
            </div>
        </header>
        <div>
            @RenderBody()
        </div>
        <footer class="default-footer">
            <p><a href="#">Наверх</a></p>
            <p>© 2017-2020 ? Company, Inc. · <a href="#">Privacy</a> · <a href="#">Terms</a></p>
        </footer>
    </div>
